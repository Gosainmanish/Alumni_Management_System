<h1>ALUMNI DETAILS</h1>
<!-- CARD START -->
<% for(let i=0;i<data.length;i++){ %>
<% if(data[i].designation === "Alumnus") { %>
<div class="card" style="width: 18rem;">
  <div class="card-header">
    Name:<%=data[i].name1%>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">Email:<%=data[i].email%></li>
    <li class="list-group-item">Phone:<%=data[i].mobile%></li>
  </ul>
  <div>
  <a style="width:100%;color:red;background-color:#28A745;" target="_blank" href="https://api.whatsapp.com/send?phone=91<%=data[i].mobile%>"><button type="button" class="btn btn-success">WhatsApp</button></a>
  </div>
</div>
<br>
<br>
<% } %>
<% } %>
<!-- CARD END -->
 <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
